@model FindADev.ASP.Models.Form.RateForm

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RateForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkDate" class="control-label"></label>
                <select asp-for="WorkDate" class="form-control" asp-items="@Html.GetEnumSelectList<WorkDate>()">
                    
                </select>
                <span asp-validation-for="WorkDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkTime" class="control-label"></label>
                <input asp-for="WorkTime" min="1" value="1" class="form-control" />
                <span asp-validation-for="WorkTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prices" class="control-label"></label>
                <input asp-for="Prices" min="1" value="1" class="form-control" />
                <span asp-validation-for="Prices" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ProfileId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
